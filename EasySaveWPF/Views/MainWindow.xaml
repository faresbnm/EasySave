<Window x:Class="EasySaveWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EasySaveWPF.Converters"
        Title="{Binding WindowTitle}" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BackupTypeConverter x:Key="BackupTypeConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Language Selection -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">
            <Button Content="English" Command="{Binding ChangeLanguageCommand}" CommandParameter="en" Margin="5"/>
            <Button Content="Français" Command="{Binding ChangeLanguageCommand}" CommandParameter="fr" Margin="5"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Left">
            <Button Content="{Binding AddBackupButtonText}" Command="{Binding OpenAddBackupDialogCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="{Binding UpdateBackupButtonText}" Command="{Binding OpenUpdateBackupDialogCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="{Binding DeleteBackupButtonText}" Command="{Binding DeleteBackupCommand}" Width="120"/>
            <Button Content="{Binding ExecuteBackupButtonText}" Command="{Binding ExecuteBackupCommand}" Width="120" Margin="10,0,0,0"/>
            <Button Content="{Binding SettingsButtonText}" Command="{Binding OpenSettingsDialogCommand}" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Backup List -->
        <GroupBox Header="{Binding BackupListHeader}" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="{Binding RefreshButtonText}" Command="{Binding LoadBackupsCommand}" HorizontalAlignment="Left" Margin="5"/>

                <ListView x:Name="BackupListView"
                          SelectionMode="Extended"
                          SelectionChanged="BackupListView_SelectionChanged"
                          ItemsSource="{Binding Backups}"
                          SelectedItem="{Binding SelectedBackup, Mode=TwoWay}"
                          Grid.Row="1" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="{Binding NameHeader}" DisplayMemberBinding="{Binding BackupName}" Width="150"/>
                            <GridViewColumn Header="{Binding SourceHeader}" DisplayMemberBinding="{Binding Source}" Width="250"/>
                            <GridViewColumn Header="{Binding TargetHeader}" DisplayMemberBinding="{Binding Target}" Width="250"/>
                            <GridViewColumn Header="{Binding TypeHeader}" DisplayMemberBinding="{Binding TypeDisplay}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- Settings Dialog -->
        <!-- Page de paramètres -->
        <Grid Visibility="{Binding IsSettingsDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
      Panel.ZIndex="5" Grid.RowSpan="3" Background="#80000000">
            <Border Background="White" Width="400" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Paramètres" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Format de log" Margin="0,5,0,0"/>
                    <ComboBox SelectedIndex="{Binding SelectedLogFormat}" Margin="0,0,0,10">
                        <ComboBoxItem Content="JSON"/>
                        <ComboBoxItem Content="XML"/>
                    </ComboBox>

                    <TextBlock Text="Extensions à crypter (.txt, .pdf, ...)" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding EncryptionExtensions}" Margin="0,0,0,10"/>

                    <TextBlock Text="Nom du logiciel métier (ex: Calculator)" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding BusinessSoftwareName}" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{Binding CancelButtonText}" Command="{Binding CloseSettingsDialogCommand}" Margin="0,0,10,0" Width="80"/>
                        <Button Content="{Binding SaveButtonText}" Command="{Binding ApplySettingsCommand}" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Add & Update Backup Dialogs existants ici (inchangés) -->

    </Grid>
</Window>